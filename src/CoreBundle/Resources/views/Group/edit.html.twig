{% extends 'CoreBundle::layout.html.twig' %}

{% form_theme form with ['CoreBundle:Form:form-div-layout-override.html.twig'] %}

{% block content %}

    <div class="main card-panel">
        <div class="container">
        <div class="row">
            <div class="col s12">
                <h2 class="header">Gruppe bearbeiten</h2>
            </div>
        </div>

            {{ form_start(form) }}
            <div id="new-student-form" class="two-col-content">
                <div class="row">
                            {{ form_widget(form) }}
                </div>

            </div>

            <div class="container">
                <div class="row">
                    <div class="input-field col s6 offset-s6">
                        <button type="submit" value="Suchen" class="right btn btn-default pull-right">
                            <i class="material-icons left">done</i>Speichern
                        </button>
                    </div>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
