{% endblock %}

{% block bodyClass %}blue-grey lighten-5{% endblock %}

{% block body %}
    <nav class="blue">
        <div class="nav-wrapper">

            {% image '@CoreBundle/Resources/public/images/logo_white.png'  output="images/logo_white.png" %}
