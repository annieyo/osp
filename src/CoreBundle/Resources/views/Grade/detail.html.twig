{% extends 'CoreBundle::layout.html.twig' %}

{% block content %}

<div class="main card-panel">

    <div class="container">

        <div class="row">
            <div class="col s12">
                <h2 class="header">Notenansicht</h2>
            </div>
        </div>

        <table>
            <thead>
            <tr>
                <th>Schülername</th>
                <th>Klasse</th>
                <th>Thema</th>
                <th>Betreuer</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ student.name }}</td>
                <td>{{ student.projectGroup.projectClass.name }}</td>
                <td>{{ student.projectGroup.topic.name }}</td>
                <td>{{ student.projectGroup.advisor.name }}</td>
            </tr>
            </tbody>
        </table>

        <table class="grades-table">
            <thead class="grades-th-border-color">
                <th class="color-1">Einzelnoten</th>
                <th class="color-2">Gruppennoten</th>
                <th class="color-3">Gesamt</th>
            </thead>
            <tbody>

                <tr>

                    <td class="color-1">
                        <table>
                            <tr>
                                <th>Präsentation</th>
                                <th>Fachgespräch</th>

                            </tr>
                            <tr>
                                <td>{{ student.singleRating.presentation }}</td>
                                <td>{{ student.singleRating.discussion }}</td>
                            </tr>
                        </table>

                    </td>

                    <td class="color-2">
                        <table>
                            <tr>
                                <th>Dokumentation</th>
                                <th>Produkt</th>

                            </tr>
                            <tr>
                                <td>{{ student.projectGroup.groupRating.documentation }}</td>
                                <td>{{ student.projectGroup.groupRating.product }}</td>
                            </tr>
                        </table>

                    </td>


                    <td class="color-3">
                        <table>
                            <tr>
                                <th>GSO</th>
                                <th>IHK</th>
                            </tr>
                            <tr>
                                <td>{{ student.singleRating.totalGso }}</td>
                                <td>{{ student.singleRating.totalIhk }}</td>
                            </tr>
                        </table>

                    </td>

                </tr>

            </tbody>
        </table>

        <div class="detail-btn-group  clearfix">
            <a class="waves-effect waves-light btn blue right" href="{{ path('grade_edit', { 'id': student.id }) }}">bearbeiten</a>
            <a class="waves-effect waves-light btn red darken-1 right" href="{{ path('grade_delete', { 'id': student.id }) }}">löschen</a>
        </div>
    </div>

{% endblock %}