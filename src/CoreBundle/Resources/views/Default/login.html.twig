{% extends 'CoreBundle::layout_login.html.twig' %}

{% block body %}

    <div id="login-page" class="row">
        <div class="col s12 z-depth-6 card-panel">
            <form class="login-form" name="login" action="{{ path('login') }}" method="POST">
                <div class="row">
                    <div class="input-field col s12 center">
                        <img class="login-logo" src="bundles/core/images/app_logo.png" alt="" class="responsive-img valign profile-image-login">
                        <p class="center login-form-text"></p>
                    </div>
                </div>
                <div class="row margin">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">perm_identity</i>
                        <input name="username"  class="validate" id="text" type="text">
                        <label for="text"  >Benutzer</label>

                    </div>
                </div>
                <div class="row margin">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">lock_outline</i>
                        <input name="password" id="password" type="password" value=" ">
                        <label for="password">Password</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <button type="submit" class="btn login-button waves-effect waves-light col s12 blue">Login</button>
                    </div>

                </div>

            </form>
        </div>
        {% if error %}
            <div class="row">
                <div class="col s12">
                    <div class="card-panel red  accent-2">
                          <span class="white-text">
                              {{ error }}
                          </span>
                    </div>
                </div>
            </div>

        {% endif %}


{% endblock %}